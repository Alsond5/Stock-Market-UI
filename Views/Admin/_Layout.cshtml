<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StockMarketUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StockMarketUI.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container text-sm">
                <!-- Sol tarafta başlık -->
                <a class="navbar-brand font-bold text-warning" href="#">StockMarket Administration</a>

                <!-- Sağ tarafta bağlantılar -->
                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav gap-3">
                        <!-- Kullanıcı adı, sabit bir isim olarak veya dinamik olarak kullanıcı adıyla değiştirilebilir -->
                        <li class="nav-item text-warning d-flex align-items-center gap-2">
                            <div>
                                <p class="m-0">Welcome,</p>
                            </div>
                            <div>
                                <p class="m-0 p-1"><strong>@ViewBag.UserInfo.Username</strong></p>
                            </div>
                        </li>
                        <!-- "Change Password" bağlantısı -->
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">Change Password</a>
                        </li>
                        <!-- "Log Out" bağlantısı -->
                        <li class="nav-item">
                            <form method="post" asp-controller="auth" asp-action="logout" class="navbar-right">
                                <button type="submit" class="btn btn-primary px-3 text-white font-regular text-sm nav-link border-0">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="px-0 pb-3">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
